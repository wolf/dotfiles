[alias]
    # Branch/ticket shortcuts
    bt = branch-from-ticket
    tb = ticket-from-branch
    mine = branches --mine
    active = branches

    # Branch creation shortcuts
    new-feature = branch-from-ticket --create --type=feature
    new-bugfix = branch-from-ticket --create --type=bugfix
    new-hotfix = branch-from-ticket --create --type=hotfix

    experimental = branch --list 'experimental/*'
    prs = branch --list 'pr/*'
    release = ! git branch --list 'release/*' | sort -r -g | head -1
    releases = ! git branch --list 'release/*' | sort -r -g
[user]
    email = wolf@dmp-maps.com
