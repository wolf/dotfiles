[alias]
    ci = commit
    br = branch
    d = diff --word-diff=color
    di = diff --ignore-all-space
    ec = config --local --edit
    egc = config --global --edit
    l = log --decorate --oneline
    l8 = log --decorate --oneline -8
    lg = log --pretty=format:'%C(yellow)%h%Creset %C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    t = ! GIT_PAGER=tig git log --no-color
    st = status -sb
    switch-recent = !git branch --sort=-committerdate --format='%(refname:short)' | fzf --preview='git log --date=relative --color main..{}' | xargs git switch
    upstream = ! git rev-parse --abbrev-ref @{u} 2>/dev/null | sed 's=origin/==' || echo '(no upstream)'
    n = ! git status -s | wc -l
    unstage = restore --staged
    aliases = ! git config --list | grep alias
[apply]
    whitespace = fix
[branch]
    sort = -committerdate
[color "branch"]
    current = green
    local = blue
    remote = red
[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold
    plain = white
    commit = yellow bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
    pager = true
[commit]
    verbose = true
[core]
    editor = hx
    pager = delta
    legacyheaders = false
    whitespace = trailing-space,space-before-tab,cr-at-eol
    excludesfile = ~/.config/git/ignore
    # fsmonitor = true
    # untrackedCache = true
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "wolf-normal"]
    hyperlinks = true
    light = true
    line-numbers = true
    navigate = true
    syntax-theme = Monokai Extended Light
[delta]
    features = wolf-normal
[diff]
    algorithm = histogram
    interHunkContext = 3
    colorMoved = plain
    renames = copies
    mnemonicprefix = true
    noprefix = true
    tool = vimdiff
    renamelimit = 1428
[difftool]
    prompt = false
[fetch]
    prune = true
    pruneTags = true
    all = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[help]
    autocorrect = prompt
[init]
    defaultBranch = main
    templatedir = ~/.config/git/template
[interactive]
    diffFilter = delta --color-only --features=interactive
    singleKey = true
[merge]
    tool = fugitive
    conflictstyle = zdiff3
    renameLimit = 65000
    directoryRename = true
[mergetool "fugitive"]
    cmd = vim -f -c "Gdiff" "$MERGED"
[mergetool]
    prompt = false
[pull]
    rebase = merges
[push]
    default = upstream
    autoSetupRemote = true
    followTags = true
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[repack]
    usedeltabaseoffset = true
[rerere]
    enabled = true
    autoUpdate = true
[stash]
    showPath = true
[tag]
    sort = version:refname
[user]
    name = Wolf
    email = Wolf@zv.cx
[includeIf "gitdir:~/development/DMP/"]
    path = ~/.config/git/config-dmp
