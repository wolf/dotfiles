[alias]
    co = checkout
    ci = commit
    br = branch
    d = diff --word-diff
    ec = config --local --edit
    egc = config --global --edit
    glog = log --all --graph --pretty='format:%d%Cgreen%h%Creset %an - %s'
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    graph = log --all --graph --decorate --abbrev-commit --oneline
    l = log --decorate --abbrev-commit --oneline
    l8 = log --decorate --abbrev-commit --oneline -8
    log2 = log --pretty=format:'%C(yellow)%h%Creset %C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status -s
    n = ! git status -s | wc -l
    aliases = ! git config --list | grep alias
[apply]
    whitespace = fix
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
    pager = true
[color "branch"]
    current = green
    local = blue
    remote = red
[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    editor = nvim
    legacyheaders = false
    excludesfile = ~/.gitignore_global
    whitespace = trailing-space,space-before-tab,cr-at-eol
[diff]
    renames = copy
    mnemonicprefix = true
    tool = opendiff
    renamelimit = 1428
[difftool]
    prompt = false
[help]
    autocorrect = 20
[merge]
    tool = opendiff
    conflictstyle = diff3
    renameLimit = 65000
    directoryRename = true
[mergetool]
    prompt = false
[pull]
    rebase = merges
[push]
    default = nothing
[repack]
    usedeltabaseoffset = true
[rerere]
    enabled = true
[user]
    name = Wolf
    email = Wolf@learninga-z.com
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[init]
    defaultBranch = main
